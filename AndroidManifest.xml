<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="llc.sourcecurve.apps.dailymiler"
      android:versionName="1.3.0" android:versionCode="8">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".DailyMilerActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    
<activity android:name="AuthorizorActivity" android:launchMode="singleTask"><intent-filter><action android:name="android.intent.action.VIEW"></action>
<category android:name="android.intent.category.DEFAULT"></category>
<category android:name="android.intent.category.BROWSABLE"></category>
<data android:scheme="x-oauthflow" android:host="callback"></data>
</intent-filter>
</activity>
</application>


<uses-sdk android:targetSdkVersion="7" android:minSdkVersion="7"></uses-sdk>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 